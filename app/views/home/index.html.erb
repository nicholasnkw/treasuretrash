<!-- Search section -->
<div class="module">
  <div class="row row-centered">
    <div class="col-md-4 col-md-offset-4">
     <%= form_tag search_path, method: :get do %>
       <form class="form-inline">
          <div class="form-group">
            <%= text_field_tag :any, params[:any], placeholder: "any", class: "form-control" %>
          </div>
            <div class="form-group ">
            <%= text_field_tag :category, params[:category], placeholder: "Category", class: "form-control" %>
           </div>
            <div class="form-group ">
            <%= text_field_tag :others, params[:others], placeholder: "Description", class: "form-control" %>
          </div>

          <%= submit_tag "Search", class: "btn btn-sample" %>
      </form>
     <% end %>
     </div>
   </div>
 </div>

