<div class="camera fullscreen flex-vertical-center"> 
  <div class="container">
    <h2>Log in</h2>
      <div class="row">
        <div class="col-md-4 ">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <form>
              <div class="form-group">
                <%= f.email_field :email, placeholder: "user@domain.com", autofocus: true, class: "form-control" %>
                <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-primary btn-sm" %>
              </div>
            <% end %>
          </form>
     
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


