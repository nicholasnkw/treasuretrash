<p id="notice"><%= notice %></p>

<div class="container-fluid"> <!-- has to be fluid --> 

  <!-- <div class="module"> -->
    <div class="row row-centered">
      <div class="col-md-12">
        <%= form_tag search_path, method: :get do %>
          <form class="form-inline">
            <div class="form-group col-md-3 col-md-offset-1">
              <%= text_field_tag :location, params[:location], placeholder: "Location", class: "form-control", style: "border-radius:6px;" %>
            </div>
        
            <div class="form-group col-md-3">
              <%= text_field_tag :category, params[:category], placeholder: "Category", class: "form-control", style: "border-radius:6px;" %>
              <%# select("params", "category", Posting::Category, { include_black: true }) %>
            </div>

            <div class="form-group col-md-3">
              <%= text_field_tag :others, params[:others], placeholder: "Description", class: "form-control", style: "border-radius:6px;" %>
            </div>

            <%= submit_tag "Search", class: "btn btn-md btn-primary col-md-1", id: "search-posting" %>
          </form>
        <% end %>
      </div>
    </div>
 <!-- </div> -->

  <div class="row" id="row">  
   <!-- <div class="col-xs-6 col-md-3">
    <div id="pins">
      <div class="thumbnail"> -->

      <% @postings.each do |posting| %>
        <%# if posting.availability && current_user.id != posting.user_id %>
        <% if posting.availability %>

      <div class="col-md-4 module"> <!-- has to be inside so that 3 pins appear in a row-->
        <div id="pins">
          <div class="thumbnail">

            <div class="panel panel-default box grow-posting">

            <div class="panel-heading post_image text-center map">
            <a href="/postings/<%=posting.id%>">
              <%= image_tag posting.avatars.first.medium.url unless posting.avatars.first.nil? %>
            </a>
            </div>
                <!-- <div class=caption""> -->
                <div class="panel-body posting-styling">
                  <h3><%= posting.title %></h3>
                    <span class="thumb-font"><strong>Description</strong><br><%= posting.description %></span><br><br>
                    <span class="thumb-font"><strong>Condition</strong><br><%= posting.condition %></span><br><br>
                    <span class="thumb-font"><strong>Category</strong><br><%= posting.category %></span><br><br>
                    <span class="thumb-font"><strong>Address</strong><br><%= posting.full_address %></span>      
                      
                      <!-- <p>
                      <a href="#" class="btn btn-success" role="button">Get!</a> 
                      <a href="#" class="btn btn-default" role="button">Book!</a>
                      </p> -->
                </div> <!-- close panel body --> 
                <!-- </div> -->  <!-- close caption --> 
            </div> <!-- close panel panel-default --> 

          </div> <!-- close thumbnail --> 
        </div> <!-- close pins --> 
      </div> <!-- close column --> 

        <% end %>
      <% end %> 

      <!-- </div>  --> <!-- close thumbnail -->
    <!-- </div> --> <!-- close column -->
  <!-- </div>  --><!-- close pins -->
  </div> <!-- close row -->
</div> <!-- close container -->

